CREATE TABLE IF NOT EXISTS vdatastore AS SELECT * FROM read_xlsx('%s', sheet='vDatastore', all_varchar=true);
CREATE TABLE IF NOT EXISTS vhost AS SELECT * FROM read_xlsx('%s', sheet='vHost', all_varchar=true);
CREATE TABLE IF NOT EXISTS vhba AS SELECT * FROM read_xlsx('%s', sheet='vHBA', all_varchar=true);
CREATE TABLE IF NOT EXISTS vnetwork AS SELECT * FROM read_xlsx('%s', sheet='vNetwork', all_varchar=true);
CREATE TABLE IF NOT EXISTS dvport AS SELECT * FROM read_xlsx('%s', sheet='dvPort', all_varchar=true);
